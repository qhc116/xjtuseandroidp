<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.LoginRegisterPage.RegisterActivity"
    >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/colorBlue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册"
            android:textSize="25dp">
        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/register_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="用户名:"
            android:textSize="17dp"></TextView>
        <EditText
            android:id="@+id/name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="独一无二的名字"
            android:maxLines="1"
            android:textAllCaps="false">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_use"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="用户密码:"
            android:gravity="center"
            android:textSize="15dp"></TextView>
        <EditText
            android:id="@+id/password_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="6到16个字符"
            android:inputType="textPassword"
            android:textAllCaps="false"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/register_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_password"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="确认密码:"
            android:gravity="center"
            android:textSize="15dp"></TextView>
        <EditText
            android:id="@+id/password2_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请再输一次密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textAllCaps="false">
        </EditText>
    </LinearLayout>
    <Button
        android:id="@+id/mBtn_register1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_alignLeft="@id/register_password2"
        android:layout_below="@id/register_password2"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button_register_false"
        android:enabled="false"
        >
    </Button>
    <Button
        android:id="@+id/mBtn_register2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:layout_alignRight="@id/register_password2"
        android:layout_below="@id/register_password2"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button_4">
    </Button>

</RelativeLayout>

